 this.$emit(\"close\");\r\n    },\r\n    dontClose(event) {\r\n      event.stopPropagation();\r\n    },\r\n    del() {\r\n      this.$emit(\"del\");\r\n    }\r\n  },\r\n  mounted() {\r\n    this.$refs.win.focus();\r\n  }\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\">\r\n.modal-fade-enter,\r\n.modal-fade-leave-active {\r\n  opacity: 0;\r\n}\r\n\r\n.modal-fade-enter-active,\r\n.modal-fade-leave-active {\r\n  transition: opacity 0.2s ease;\r\n}\r\n\r\n.modal-backdrop {\r\n  position: fixed;\r\n  top: 0;\r\n  bottom: 0;\r\n  left: 0;\r\n  right: 0;\r\n  background-color: rgba(0, 0, 0, 0.4);\r\n  display: flex;\r\n  justify-content: center;\r\n  align-items: center;\r\n\r\n  .modal {\r\n    background: #ffffff;\r\n    box-shadow: 4px 4px 30px 1px;\r\n    overflow-x: auto;\r\n    display: flex;\r\n    flex-direction: column;\r\n\r\n    .modal-header,\r\n    .modal-footer {\r\n      padding: 15px;\r\n      display: flex;\r\n      align-items: baseline;\r\n    }\r\n\r\n    .modal-header {\r\n      border-bottom: 1px solid $colorW;\r\n      background-color: $colorG;\r\n      color: #000;\r\n      vertical-align: baseline;\r\n      justify-content: space-between;\r\n      font-size: 1.5rem;\r\n      position: relative;\r\n\r\n      .close-x {\r\n        // font-size: 100%;\r\n        // font-family: inherit;\r\n        border: 0;\r\n        padding: 0;\r\n        background-color: #fff;\r\n        position: absolute;\r\n        top: 0;\r\n        right: 0;\r\n        bottom: 0;\r\n        width: 4rem;\r\n      }\r\n    }\r\n\r\n    .modal-footer {\r\n      border-top: 1px solid #eeeeee;\r\n      justify-content: space-between;\r\n\r\n      button {\r\n        font-size: 1rem;\r\n        padding: 0.4rem 1.2rem;\r\n        background-color: transparent;\r\n        border: 0;\r\n\r\n        &.modal-delete {\r\n          background-color: $colorR;\r\n          color: #fff;\r\n          img {\r\n            filter: invert(1);\r\n          }\r\n\r\n          &:hover {\r\n            background-color: darken($colorR, 10);\r\n          }\r\n        }\r\n        &.modal-close {\r\n          background-color: $colorG;\r\n          &:hover {\r\n            background-color: darken($colorG, 10);\r\n          }\r\n        }\r\n      }\r\n    }\r\n\r\n    .modal-body {\r\n      position: relative;\r\n      padding: 15px 10px;\r\n\r\n      table tr td {\r\n        padding: 3px 6px;\r\n        font-family: sans-serif;\r\n        font-size: 0.9rem;\r\n\r\n        input {\r\n          width: 250px;\r\n        }\r\n      }\r\n    }\r\n  }\r\n}\r\n\r\n@media (max-width: 800px) {\r\n  .modal-backdrop {\r\n    justify-content: unset;\r\n\r\n    .modal {\r\n      box-shadow: 0 0 0 0;\r\n\r\n      .modal-body {\r\n        padding: 15px 0;\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>\r\n"],"mappings":"AA8BA;EACAA,OAAA;IACAC,KAAA,WAAAA,MAAA;MACA,KAAAC,KAAA;IACA;IACAC,SAAA,WAAAA,UAAAC,KAAA;MACAA,KAAA,CAAAC,eAAA;IACA;IACAC,GAAA,WAAAA,IAAA;MACA,KAAAJ,KAAA;IACA;EACA;EACAK,OAAA,WAAAA,QAAA;IACA,KAAAC,KAAA,CAAAC,GAAA,CAAAC,KAAA;EACA;AACA"},"metadata":{},"sourceType":"module","externalDependencies":[]}